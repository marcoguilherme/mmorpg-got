<div id="pergaminhos">
	<h3>Pergaminhos</h3>

	<ul>
		<% for(var i = 0; i < acoes.length; i++){ 
			
			var txt_acao = '';
			switch(parseInt(acoes[i].acao)){
				case 1: txt_acao = 'Aldeao(oes) coletando rescursos'; break;
				case 2: txt_acao = 'Aldeao(oes) sendo enforcado(os)'; break;
				case 3: txt_acao = 'Aldeao(oes) aprendendo historia'; break;
				case 4: txt_acao = 'Aldeao(oes) aprendendo magia'; break;
			}

			var date = new Date();
			var momento_atual = date.getTime();

		%>
			<li><%= acoes[i].quantidade %> <%= txt_acao %> - 
			<small>restam <span class="tempo_restante"><%= Math.round((acoes[i].acao_termina_em - momento_atual) / 1000) %></span> - <a href="#">revogar ordem</a></small></li>
		<% } %>
	</ul>
</div>
